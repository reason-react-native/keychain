{
  "name": "@reason-react-native/keychain",
  "version": "3.1.0",
  "description": "Reason/BuckleScript bindings for react-native-keychain",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react-native-keychain": ">=3.1.3"
  },
  "author": "Christoph Knittel <ck@cca.io>",
  "repository": "https://github.com/reason-react-native/keychain.git",
  "license": "MIT",
  "keywords": [
    "reason",
    "reasonml",
    "bucklescript",
    "react-native",
    "reason-react-native",
    "react-native-keychain",
    "keychain"
  ],
  "files": [
    "*.md",
    "bsconfig.json",
    "src/*.re",
    "src/*.js",
    "!src/*.bs.js"
  ],
  "scripts": {
    "format:most": "prettier --write \"**/*.{md,json,js,css}\"",
    "format:re": "find . -name \"*.re\" -or -name \"*.rei\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "format": "yarn format:most && yarn format:re",
    "re:start": "bsb -make-world -w",
    "re:build": "bsb -make-world",
    "re:clean-build": "bsb -clean-world -make-world",
    "start": "yarn re:start",
    "build": "yarn re:build",
    "test": "yarn re:clean-build",
    "release": "npmpub"
  },
  "devDependencies": {
    "bs-platform": "^5.2.0",
    "husky": "^1.3.0",
    "lint-staged": "^10.1.1",
    "npmpub": "^5.0.0",
    "prettier": "^1.18.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
